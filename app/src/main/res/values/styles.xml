<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    imageview for group picture-->
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- chip style-->
    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
    <item name="chipBackgroundColor">@color/cardview_dark_background</item>
    <!--    <item name="android:textAppearance">@style/ChipTextAppearance</item>-->
    <!--    <item name="android:textColor">@color/secondary_dark_blue</item>-->
    </style>

    <style name="iconbutton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:color">@color/purple_700</item>
    </style>

    <style name="pop_up_dialog_corners" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/dialog_corners</item>
    </style>

    <style name="button" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>