<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BatchTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/karla</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!--    title for every page-->
    <style name="page_title" parent="" >
        <item name="android:fontFamily">@font/karla_extra_bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">28sp</item>
    </style>

<!--    page heading-->
    <style name="page_heading" parent="" >
        <item name="android:fontFamily">@font/karla_bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">18sp</item>
    </style>

<!--    page subheading-->
    <style name="page_subheading" parent="" >
        <item name="android:fontFamily">@font/karla</item>
        <item name="android:textColor">#414743</item>
        <item name="android:textSize">13sp</item>
    </style>
<!--    -->
    <style name="custom_button_view" parent="" >
        <item name="android:background">@color/app_background</item>
        <item name="android:backgroundTint">@color/app_background</item>
    </style>

<!--   regular font for page text-->
    <style name="page_text" parent="" >
        <item name="android:fontFamily">@font/karla</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
    </style>

<!--    page margin-->
    <style name="page_margin" parent="" >
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>

</resources>