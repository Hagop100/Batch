<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/page_margin"
        android:background="@color/app_background">


        <TextView
            android:id="@+id/group_creation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_creation_title"
            android:layout_marginTop="40dp"
            android:theme="@style/page_title"
            />


        <View
            android:id="@+id/horizontal_bar"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/horizontal_line"
            />


        <ImageView
            android:id="@+id/group_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical"
            android:theme="@style/page_text">

            <TextView
                android:id="@+id/group_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_corner"
                android:padding="5dp"
                android:text="Group Code:"
                android:textColor="#B5B3B1"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Group name:"
                android:textColor="#B5B3B1"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/edit_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/group_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Tags:"
                android:textColor="#B5B3B1"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:theme="@style/page_text"
            android:layout_margin="0dp">

            <Button
                android:id="@+id/btn_add_tag"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:layout_marginRight="0dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#58322B"
                android:textSize="25dp"
                />

            <EditText
                android:id="@+id/edit_group_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:hint="add tag"
                android:gravity="center"
                android:background="@drawable/round_corner"
                android:layout_margin="0dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/page_text"
            android:layout_margin="0dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/group_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About us:"
                android:layout_marginTop="30dp"
                android:textColor="#B5B3B1"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_group_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="5dp"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:background="@drawable/round_corner"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btn_create_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create"
                android:layout_marginTop="30dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>




