<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/page_text"
    android:background="@color/app_background"

    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/group_profile"
        android:layout_width="225dp"
        android:layout_height="199dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/one_direction_photo"
        />


    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="username"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:textStyle="bold"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_corner"
        android:padding="20dp">

        <TextView
            android:id="@+id/edit_profile"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
          />

        <ImageButton
            android:id="@+id/edit_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_weight="1"
            android:backgroundTint="@color/background_text"
            android:src="@drawable/edit_profile" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_corner"
        android:padding="20dp">

        <TextView
            android:id="@+id/preferences"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:text="@string/preferences" />

        <ImageButton
            android:id="@+id/preferences_btn"
            android:layout_width="62dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/background_text"
            android:src="@drawable/preferences" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_corner"
        android:padding="20dp">

        <TextView
            android:id="@+id/settings"
            android:layout_width="270dp"
            android:layout_height="wrap_content"

            android:text="@string/settings" />

        <ImageButton
            android:id="@+id/settings_btn"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_weight="1"
            android:backgroundTint="@color/background_text"
            android:src="@drawable/setting" />
    </LinearLayout>


</LinearLayout>