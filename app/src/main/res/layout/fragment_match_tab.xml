<?xml version="1.0" encoding="utf-8"?>
<!--match tab using relative layout -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MatchTab.MatchTabFragment"
    android:background="@color/app_background"
    android:layout_marginBottom="60dp">

    <!--card stack recycler view to display cards -->
    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/card_stack_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"/>

    <!-- container for the accept and reject button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/reject_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/reject_button"
            android:src="@drawable/reject_btn" />

        <ImageButton
            android:id="@+id/accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:contentDescription="@string/accept_button"
            android:src="@drawable/accept_btn" />
    </RelativeLayout>
</RelativeLayout>
